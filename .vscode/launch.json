{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Run AI Flask + C++ Server",
            "configurations": ["Python: Flask", "C++: Launch Server"]
        }
    ],
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ai/app.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "C++: Launch Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/http_server",
            "cwd": "${workspaceFolder}/build",
            "MIMode": "gdb",
            "preLaunchTask": "Build C++ Server",
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing"
                }
            ]
        }
    ]
}
